{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@/": ["srcv2/"],
            "@/api/*": ["srcv2/api/*"],
            "@/business/*": ["srcv2/business/*"],
            "@/data/*": ["srcv2/data/*"],
            "@/services/*": ["srcv2/services/*"],
            "@/types/*": ["srcv2/types/*"],
            "@/utils/*": ["srcv2/utils/*"]
        }
    },
    "ts-node": {
        "esm": true
    },
    "include": [
        "src",
        "srcv2"
    ]
}